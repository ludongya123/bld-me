.modal_box {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: black;
  opacity: 0.7;
  top: 0;
  z-index: 99;
}
.pick_box {
  position: fixed;
  width: 100%;
  height: 900rpx;
  background-color: #fff;
  bottom: -900rpx;
  left: 0;
  z-index: 999;
  -webkit-transition: bottom 0.3s ease;
  -o-transition: bottom 0.3s ease;
  transition: bottom 0.3s ease;
}
.pick_box.show {
