.modal_box {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: black;
  opacity: 0.7;
  top: 0;
  z-index: 99;
}
.pick_box {
  position: fixed;
  width: 100%;
  height: 800rpx;
  background-color: #fff;
  bottom: -800rpx;
  left: 0;
  z-index: 999;
  -webkit-transition: bottom 0.3s ease;
  -o-transition: bottom 0.3s ease;
  transition: bottom 0.3s ease;
}
.pick_box.show {
    bottom: 0;
}
.pick_box .pick_top {
    position: relative;
    width: 100%;
    height: 112rpx;
    text-align: center;
    line-height: 112rpx;
    font-size: 32rpx;
    color: #333;
}
.pick_box .pick_top .icon_delete {
      position: absolute;
      width: 34rpx;
      height: 34rpx;
      top: 39rpx;
      right: 26rpx;
}
.pick_box .pick_content {
    height: 688rpx;
    padding: 37rpx 32rpx 24rpx;
    overflow-y: auto;
}
.pick_box .pick_content .pick_item {
      position: relative;
      width: 686rpx;
      height: 184rpx;
      background: #F6F6F6;
      margin: 0 auto 24rpx;
}
.pick_box .pick_content .pick_item .item_left_img {
        float: left;
        width: 88rpx;
        height: 88rpx;
        margin: 48rpx 24rpx 48rpx 32rpx;
}
.pick_box .pick_content .pick_item .car_msg {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        float: left;
        width: 500rpx;
        height: 100%;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
            -ms-flex-direction: column;
                flex-direction: column;
        -webkit-justify-content: space-around;
            -ms-flex-pack: distribute;
                justify-content: space-around;
        padding: 52rpx 0;
}
.pick_box .pick_content .pick_item .car_msg .car_msg_title {
          font-size: 36rpx;
          color: #283540;
          font-weight: bold;
}
.pick_box .pick_content .pick_item .car_msg .car_msg_des {
          font-size: 26rpx;
          color: #999999;
          font-weight: 400;
}
.pick_box .pick_content .pick_item .icon_check_car {
        position: absolute;
        width: 60rpx;
        height: 60rpx;
        right: 0;
        top: 0;
}

