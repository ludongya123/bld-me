.layer {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1;
  left: 0;
  top: 0;
}
.layer-content {
  height: 860rpx;
  background: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 2;
  left: 0;
  padding: 0 32rpx;
}
.layer-content .title .confirm {
    color: #666;
    font-size: 26rpx;
    padding: 20rpx;
}
.layer-content .title .confirm.active {
      color: #333;
}
.layer-content .title .region-title text {
    color: #333;
    font-weight: bold;
    position: relative;
    line-height: 100rpx;
    margin-right: 30rpx;
}
.layer-content .title .region-title text.active {
      color: #B49A83;
      border-bottom: 4rpx solid #B49A83;
}
.layer-content .swiper {
    height: 756rpx;
}
.layer-content .swiper .scroll {
      height: 100%;
      padding: 32rpx 0;
}
.layer-content .swiper .scroll .item {
        padding: 24rpx 0;
        color: #333;
}
.layer-content .swiper .scroll .item.active {
          color: #B49A83;
}
.layer-content .swiper .scroll .item image {
          width: 32rpx;
          height: 28rpx;
}

