page {
  background: #fff;
}
.container {
  padding: 0 32rpx 120rpx;
}
.container .item {
    padding: 40rpx 0;
}
.container .item .left image {
      width: 40rpx;
      height: 40rpx;
}
.container .item .left view {
      color: #D3BAA5;
      font-size: 20rpx;
      margin-top: 10rpx;
}
.container .item .left .circle {
      display: block;
      width: 40rpx;
      height: 40rpx;
      -webkit-border-radius: 50%;
              border-radius: 50%;
      border: 1rpx solid #ccc;
}
.container .item .center {
      margin: 0 14rpx 0 36rpx;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
}
.container .item .center .user-name {
        color: #333;
        font-size: 32rpx;
        font-weight: bold;
}
.container .item .center .user-name text {
          color: #999;
          margin-left: 16rpx;
          font-size: 26rpx;
}
.container .item .center .detail {
        line-height: 36rpx;
        color: #666;
        margin-top: 16rpx;
}
.container .item .center .detail text {
          font-size: 20rpx;
          padding: 4rpx 8rpx;
          background: #D3BAA5;
          color: #fff;
          margin-right: 16rpx;
}
.container .item .right {
      padding-left: 32rpx;
      position: relative;
}
.container .item .right image {
        width: 46rpx;
        height: 46rpx;
}
.container .item .right:before {
        content: '';
        display: block;
        width: 1rpx;
        height: 84rpx;
        position: absolute;
        border-left: 1rpx solid  #f0f0f0;
        left: 0;
        top: -14rpx;
}
.btn {
  position: fixed;
  width: 100%;
  line-height: 98rpx;
  bottom: 0;
  background: #C9AD94;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  left: 0;
  color: #fff;
  letter-spacing: 2rpx;
}

