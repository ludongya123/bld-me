      color: #666;
      font-size: 24rpx;
      line-height: 1.3;
      padding: 20rpx 0;
}
.item-g .item-list view.left {
        width: 260rpx;
        border-right: 2rpx solid #fff;
        padding-left: 28rpx;
}
