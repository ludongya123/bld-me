.container {
  padding: 0 32rpx;
}
.item-g {
  padding: 48rpx 0 0;
}
.item-g .title {
    margin-bottom: 28rpx;
}
.item-g .title .title-left {
      font-size: 32rpx;
      color: #333;
      font-weight: bold;
}
.item-g .title .title-right text {
      color: #999;
