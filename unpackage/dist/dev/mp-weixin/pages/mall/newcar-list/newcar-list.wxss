page {
  background: #fff;
}
.wrapper {
  padding: 32rpx 32rpx 0;
}
.item {
  background: #fff;
  margin-bottom: 32rpx;
  -webkit-border-radius: 0 0 4rpx 4rpx;
          border-radius: 0 0 4rpx 4rpx;
}
.item image {
    width: 100%;
    height: 340rpx;
    display: block;
}
.item .car-info {
    padding: 32rpx 24rpx 32rpx 0;
}
.item .car-info .car-title {
      margin-bottom: 16rpx;
      padding-left: 24rpx;
}
.item .car-info .car-title .car-name, .item .car-info .car-title .car-price {
        color: #333;
        line-height: 36rpx;
        font-size: 36rpx;
        font-weight: bold;
}
.item .car-info .car-title .car-price {
        color: #EA6572;
}
.item .car-info .intro {
      padding-left: 24rpx;
      color: #999;
      line-height: 40rpx;
      font-size: 28rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      /*! autoprefixer: off */
      -webkit-box-orient: vertical;
      word-break: break-all;
      /* autoprefixer: on */
}
.item .car-info .car-tags {
      -webkit-flex-wrap: wrap;
          -ms-flex-wrap: wrap;
              flex-wrap: wrap;
}
.item .car-info .car-tags text {
        padding: 8rpx 20rpx;
        color: #EA6572;
        line-height: 24rpx;
        font-size: 24rpx;
        border: 1rpx solid #EA6572;
        margin-top: 24rpx;
        margin-left: 24rpx;
}
.scroll-nodata {
  padding: 30rpx;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}
.init-nodata {
  color: #888;
  line-height: 80vh;
  text-align: center;
}

