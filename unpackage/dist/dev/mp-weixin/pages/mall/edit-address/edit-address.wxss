page {
  background: #fff;
}
.container {
  padding: 0 32rpx;
}
.container .form-item {
    padding: 20rpx 0;
}
.container .form-item .label {
      color: #333;
      line-height: 68rpx;
      width: 150rpx;
}
.container .form-item input, .container .form-item .input {
      color: #333;
      height: 68rpx;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      line-height: 68rpx;
}
.container .form-item .input.empty {
      color: #ccc;
}
.container .form-item image {
      width: 16rpx;
      height: 32rpx;
}
.container .form-item .switch {
      -webkit-transform: scale(0.8);
          -ms-transform: scale(0.8);
              transform: scale(0.8);
      position: relative;
      right: -20rpx;
}
.btn {
  line-height: 98rpx;
  text-align: center;
  background: #ccc;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 60rpx;
}
.btn.active {
    background: #C9AD94;
    color: #fff;
}
.btns {
  margin-top: 60rpx;
}
.btns view {
    width: 320rpx;
    line-height: 98rpx;
    text-align: center;
    font-weight: bold;
    font-size: 32rpx;
}
.btns view.left {
      border: 1rpx solid #C9AD94;
      color: #C9AD94;
}
.btns view.right {
      background: #C9AD94;
      color: #fff;
}
.btns view.right.empty {
        background: #ccc;
}

