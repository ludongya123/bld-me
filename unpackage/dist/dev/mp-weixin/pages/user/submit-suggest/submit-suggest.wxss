page {
  background: #fff;
}
.top {
  padding: 0 32rpx  32rpx;
  background: #fff;
}
.top .tip {
    padding: 32rpx 0;
    color: #666;
}
.top .tip image {
      width: 32rpx;
      height: 32rpx;
      margin-right: 16rpx;
}
.top .address {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
}
.top .address .addr-title {
      font-size: 36rpx;
      font-weight: bold;
      color: #283540;
      line-height: 1.3;
}
.top .address .addr-detail {
      font-size: 24rpx;
      color: #666;
      margin-top: 16rpx;
}
.top .address .addr-detail .addr-desc {
        flex: 1;
        line-height: 1.3;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        /*! autoprefixer: off */
        -webkit-box-orient: vertical;
        word-break: break-all;
        /* autoprefixer: on */
}
.top .address .addr-detail .distance {
        margin-left: 20rpx;
}
.top .address .addr-detail image {
        width: 26rpx;
        height: 26rpx;
        margin-right: 16rpx;
}
.top .address .arrow-icon {
      margin-left: 30rpx;
}
.top .address .arrow-icon .icon {
        width: 16rpx;
        height: 32rpx;
}
.gap {
  height: 16rpx;
}
.botm {
  padding: 32rpx 32rpx 48rpx;
  background: #fff;
}
.botm .tip {
    color: #333;
    font-size: 32rpx;
}
.botm .type-icon {
    margin: 30rpx 0 40rpx;
}
.botm .type-icon image {
      height: 96rpx;
}
.botm .type-icon image:first-child {
        width: 58rpx;
}
.botm .type-icon image:nth-child(2) {
        width: 59rpx;
}
.botm .type-icon image:nth-child(3) {
        width: 104rpx;
}
.botm .type-icon image:last-child {
        width: 62rpx;
}
.botm .textarea {
    padding: 24rpx 24rpx 0;
    border: 1rpx solid #F3F3F3;
}
.botm .textarea .count {
      text-align: right;
      color: #999;
      padding: 30rpx 0;
}
.botm .textarea textarea {
      color: #666;
      line-height: 40rpx;
      font-size: 28rpx;
      height: 200rpx;
}
.botm .add-img-list {
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
}
.botm .add-img-list .img {
      position: relative;
      margin-left: 20rpx;
      margin-top: 24rpx;
}
.botm .add-img-list .img .content {
        width: 215rpx;
        height: 172rpx;
        display: block;
}
.botm .add-img-list .img .close-icon {
        width: 44rpx;
        height: 44rpx;
        position: absolute;
        right: -16rpx;
        top: -16rpx;
}
.botm .add-img-list .img:nth-child(3n-2) {
        margin-left: 0;
}
.submit {
  position: fixed;
  width: 100%;
  bottom: 0;
  color: #fff;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: #CCCCCC;
  text-align: center;
}
.submit.active {
    background: #C9AD94;
}

