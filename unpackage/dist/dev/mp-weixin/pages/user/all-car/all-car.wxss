.wrapper {
  padding: 32rpx;
}
.swiper-item {
  background: #fff;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.swiper-item .car-info {
    padding: 32rpx 32rpx 32rpx 24rpx;
}
.swiper-item .car-info .img {
      width: 88rpx;
      height: 88rpx;
      margin-right: 20rpx;
      display: block;
}
.swiper-item .car-info .car-detail {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      overflow: hidden;
}
.swiper-item .car-info .car-detail .car-name text {
        color: #283540;
        line-height: 36rpx;
        font-size: 36rpx;
        font-weight: bold;
}
.swiper-item .car-info .car-detail .car-name image {
        width: 64rpx;
        height: 52rpx;
        margin-left: 10rpx;
}
.swiper-item .car-info .car-detail .car-subname, .swiper-item .car-info .car-detail .car-mileage {
        color: #999;
        line-height: 26rpx;
        font-size: 24rpx;
        white-space: nowrap;
        overflow: hidden;
        -o-text-overflow: ellipsis;
           text-overflow: ellipsis;
        margin-top: 16rpx;
}
.swiper-item .handel-area {
    padding: 28rpx 32rpx;
    color: #4a4a4a;
}
.swiper-item .handel-area .edit-del .flex-end {
      margin-left: 40rpx;
}
.swiper-item .handel-area .icon {
      width: 36rpx;
      height: 36rpx;
      margin-right: 16rpx;
}
.swiper-item .handel-area text {
      font-size: 24rpx;
      color: #999;
}
.nodata {
  padding: 30rpx;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}

