.wrapper {
  padding-top: 104rpx;
}
.nav {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 10;
}
.nav .nav-item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    height: 84rpx;
    line-height: 84rpx;
    text-align: center;
    background: #fff;
    position: relative;
}
.nav .nav-item.active:after {
      content: "";
      position: absolute;
      width: 60rpx;
      border-bottom: 6rpx solid #B49A83;
      bottom: 0;
      left: 50%;
      margin-left: -30rpx;
}
.nav .nav-item.active text {
      color: #B49A83;
      font-weight: bold;
}
.nav .nav-item text {
      display: inline-block;
      line-height: 84rpx;
      font-size: 28rpx;
      color: #5E6A75;
}
.options {
  background: #fff;
}
.options .date-choose {
    text-align: center;
    padding: 20rpx 0;
}
.options .date-choose view {
      color: #333;
      line-height: 64rpx;
      font-size: 32rpx;
      display: inline-block;
      padding: 0 30rpx;
      -webkit-border-radius: 50rpx;
              border-radius: 50rpx;
      background: #E9D4BF;
      margin: 0 auto;
}
.options .date-choose view image {
        width: 36rpx;
        height: 36rpx;
        vertical-align: middle;
        margin-left: 20rpx;
}
.options .list-g {
    padding: 0 32rpx;
}
.options .list-g .list-i {
      padding: 24rpx 0;
}
.options .list-g .list-i text {
        color: #666;
        line-height: 44rpx;
        font-size: 32rpx;
}
.options .list-g .list-i text.tip {
          width: 240rpx;
}
.options .list-g .list-i text.val {
          text-align: center;
          -webkit-box-flex: 1;
          -webkit-flex: 1;
              -ms-flex: 1;
                  flex: 1;
}
.options .list-g .list-i text.unit {
          text-align: right;
          width: 200rpx;
}

