  padding: 32rpx;
}
.top, .top-copy {
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  background: #fff;
  padding: 30rpx 0 40rpx;
  -webkit-box-shadow: 0px 2px 6px 0px rgba(228, 228, 228, 0.5);
          box-shadow: 0px 2px 6px 0px rgba(228, 228, 228, 0.5);
